#!/usr/bin/env python
"""
setup.py file for SWIG example
"""

import os.path
import numpy

from distutils.core import setup, Extension

xcfun_swig_module = Extension(
    '_xcfun_swig',
    sources=['${PROJECT_BINARY_DIR}/python/xcfun_swigPYTHON_wrap.c'],
    include_dirs=['${PROJECT_BINARY_DIR}/include', '${PROJECT_SOURCE_DIR}/api',
                  numpy.get_include()],
    extra_objects=['${CMAKE_LIBRARY_OUTPUT_DIRECTORY}/libxcfun.a'],
    libraries=['stdc++'])

setup(
    name='example',
    version='0.1',
    author="SWIG Docs",
    description="""Simple swig example from docs""",
    ext_modules=[xcfun_swig_module],
    py_modules=["xcfun_swig"],
)
